        <table class="table table-light">
            <thead class="thead-light">
                <tr>
                    <th> # </th>
                    <th>Nombre</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% for( let libro = 0; libro < libros.length; libro++ ) { %>
                    <tr>
                        <td> <%=libros[libro].id %>  </td>
                        <td> <%=libros[libro].nombreLibro %>  </td>
                        <td> <%=libros[libro].imagen %>  </td>
                        <td> Editar | Borrar </td>
                    </tr>
                <% } %>
                
            </tbody>
        </table>
